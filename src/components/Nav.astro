---
// library imports
import { Icon } from 'astro-icon/components'

// component imports
import Link from "./Link.astro";

// data imports
import { navData } from "../consts";
---

<nav aria-label="Primary">
  <div class="navbar">
    <a href="/" aria-label="Go home">
      <Icon name="logomark" width="60" />
    </a>
    <ul>
      {
        navData.map((item) => (
          <Link
            text={item.name}
            href={item.path}
            style="primary"
            isFilled={false}
            data-navLink
          />
        ))
      }
    </ul>
  </div>
</nav>

<script>
  import "../js/nav.js";
</script>
